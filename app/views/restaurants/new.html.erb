<div class="card bg-dark text-white h-50">
  <img class="card-img h-50" src="https://images.unsplash.com/photo-1541173056672-97e84767d149?ixlib=rb-1.2.1&auto=format&fit=crop&w=2597&q=80" alt="Card image">
  <div class="card-img-overlay h-50">
  </div>
</div>

<div class="container w-50 mt-5 mb-5">
  <%= simple_form_for (@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.submit "Add !", class: "btn btn-dark" %>
  <% end %>
</div>
