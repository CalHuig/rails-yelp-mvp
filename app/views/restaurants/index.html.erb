<div class="container">
      <div class="row d-flex justify-content-center">
    <div class = "col-sm-6">
  <% @restaurants.each do |r| %>
    <% img_url = "https://source.unsplash.com/1600x900/?restaurant,#{r.category}" %>
    <div class="card bg-dark text-white mt-4 mb-4">
      <img src=<%= img_url %> class="card-img" alt="restaurant image">
      <div class="card-img-overlay">
         <h3 class="card-title"> <%=r.name%> </h3>
         <p class="card-text"> <%= r.address %> </p>
         <p class="card-text"> <%= r.phone_number %> </p>
         <p class="card-text"> <%= r.category %> </p>
         <%= link_to "See more", restaurant_path(r), class: "btn btn-light" %>
      </div>
    </div>
  <% end %>
</div>
</div>
</div>
